{
  "name": "ChatWork Mute Room Extension",
  "description": "Mute Room in ChatWork.",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ChatWork Mute Room"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chatwork.com/*"],
      "js": ["js/contentscript.js"],
      "run_at": "document_end"
    }
  ]
}
